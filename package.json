{
  "name": "engineering-tool-prototype",
  "displayName": "Engineering Tool Prototype",
  "description": "A modular device engineering tool for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:engineeringTool.openMainView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "engineeringTool.openMainView",
        "title": "Open Engineering Tool"
      },
      {
        "command": "engineeringTool.createProject",
        "title": "Create New Project"
      },
      {
        "command": "engineeringTool.loadProject",
        "title": "Load Project"
      },
      {
        "command": "engineeringTool.saveProject",
        "title": "Save Project"
      },
      {
        "command": "engineeringTool.closeProject",
        "title": "Close Project"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "engineeringTool.openMainView",
          "when": "workspaceFolderCount != 0"
        },
        {
          "command": "engineeringTool.createProject",
          "when": "engineeringTool.mainViewOpen"
        },
        {
          "command": "engineeringTool.loadProject",
          "when": "engineeringTool.mainViewOpen"
        },
        {
          "command": "engineeringTool.saveProject",
          "when": "engineeringTool.mainViewOpen"
        },
        {
          "command": "engineeringTool.closeProject",
          "when": "engineeringTool.mainViewOpen"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "markdownlint-cli": "^0.47.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  }
}
